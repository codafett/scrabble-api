{
  "name": "scrabble-api",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "description": "Scrabble API",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:rjgreaves/scrabble-api.git"
  },
  "main": "server.js",
  "scripts": {
    "compile": "babel --presets=@babel/env -d lib/ app/",
    "prepublish": "npm run compile",
    "start": "babel-node app/server.js",
    "start:prod": "node lib/server.js NODE_ENV=production LOG_LEVEL=debug",
    "test": "cross-env NODE_ENV=test LOG_LEVEL=DEBUG jest --coverage",
    "test:logging": "cross-env LOG_LEVEL=DEBUG jest --coverage",
    "test:no-coverage": "cross-env NODE_ENV=test LOG_LEVEL=DEBUG jest",
    "test:tdd": "cross-env NODE_ENV=test LOG_LEVEL=DEBUG jest --watch",
    "test:tdd-logging": "cross-env LOG_LEVEL=DEBUG jest --watch",
    "dev": "nodemon server.js",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- . --ext .gql --ext .graphql",
    "lint:staged": "lint-staged",
    "coverage": "cross-env NODE_ENV=test nyc mocha",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:dev:build": "docker-compose -f docker-compose.yml build",
    "docker:up:dev": "docker-compose -f docker-compose.yml -f docker-compose-dev.yml up",
    "docker:up": "docker-compose -f docker-compose.prod.yml up"
  },
  "author": "Reuben Greaves",
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "@playlyfe/gql": "^2.6.2",
    "apollo-server-core": "^2.11.0",
    "apollo-server-express": "^2.11.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.16.4",
    "express-graphql": "^0.9.0",
    "express-http-context": "^1.2.3",
    "express-jwt": "^5.3.1",
    "generate-password": "^1.5.1",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.4.0",
    "jwt-simple": "^0.5.5",
    "merge-graphql-schemas": "^1.7.6",
    "method-override": "^3.0.0",
    "mongoose": "^5.9.7",
    "mongoose-aggregate-paginate": "^1.1.3",
    "mongoose-lean-id": "^0.2.0",
    "mongoose-paginate": "^5.0.3",
    "mongoose-private-paths": "^0.7.0",
    "morgan": "^1.10.0",
    "nodejs-license-file": "^4.0.0",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-token": "^1.0.1",
    "rand-token": "^1.0.1",
    "shortid": "^2.2.15",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-graphql-tag": "^2.5.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "istanbul": "^0.4.5",
    "jest": "^25.2.4",
    "jest-watch-typeahead": "^0.4.2",
    "nyc": "^15.0.0",
    "prettier-eslint": "^9.0.1",
    "sloc": "^0.2.0",
    "superagent": "^5.2.2",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "plugins": [
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "class-methods-use-this": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "function-paren-newline": [
        "error",
        "consistent"
      ],
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/no-webpack-loader-syntax": 0,
      "import/prefer-default-export": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "specialLink": [
            "Link"
          ]
        }
      ],
      "jsx-a11y/aria-props": 2,
      "jsx-a11y/heading-has-content": 0,
      "jsx-a11y/label-has-for": 2,
      "jsx-a11y/mouse-events-have-key-events": 2,
      "jsx-a11y/role-has-required-aria-props": 2,
      "jsx-a11y/role-supports-aria-props": 2,
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-console": 1,
      "no-use-before-define": 0,
      "object-curly-newline": [
        "error",
        {
          "consistent": true
        }
      ],
      "prefer-template": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-first-prop-new-line": [
        2,
        "multiline"
      ],
      "react/jsx-filename-extension": 0,
      "react/jsx-no-target-blank": 0,
      "react/require-default-props": 0,
      "react/require-extension": 0,
      "react/self-closing-comp": 0,
      "require-yield": 0
    },
    "globals": {
      "BASE_API_URL": false
    }
  }
}
